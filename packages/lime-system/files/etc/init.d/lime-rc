START=99
RCDIR=/etc/lime-rc.d

start() {
	for s in $RCDIR/*; do
	  [ -x "$s" ] && { 
	    echo "Executing script $s"
	    $s
	  }
	done
}

stop() {
	echo "Nothing to do"
}

restart() {
	stop
	start
}
